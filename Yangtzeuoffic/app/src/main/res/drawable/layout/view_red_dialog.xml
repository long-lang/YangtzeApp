<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/translate">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="375dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_redbag_bg" />

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="25dp"
        android:background="#FDFAE9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="5 2 3 1 8 5"
            android:textColor="#E8003B"
            android:textSize="30sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="@dimen/margin_5"
            android:src="@drawable/ic_close"
            android:tint="@color/black_20" />
    </RelativeLayout>

    <TextView
        android:id="@+id/trip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="35dp"
        android:background="@color/black_20"
        android:gravity="start"
        android:padding="@dimen/margin_5"
        android:text="打开支付宝搜索【523185】领红包，领到大红包的小伙伴赶紧使用哦！"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/trip"
        android:layout_marginTop="40dp"
        android:background="@color/black_20" />

    <TextView
        android:id="@+id/gotoZFB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="去支付宝粘贴领红包"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText" />

</RelativeLayout>